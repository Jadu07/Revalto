generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model user {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  anonymous_name String
  gender         Gender
  phone          String   @unique
  hostel         Hostel
  room_number    Int
  is_anonymous   Boolean
  created_at     DateTime @default(now())
}

enum Hostel {
  Your_Space_01
  Your_Space_02
  UniSpace_Boys
  UniSpace_Girls
}

enum Gender {
  Male
  Female
  Others
}
